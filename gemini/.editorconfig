# VORTEX EditorConfig
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Rust
[*.rs]
indent_size = 4

# Python
[*.py]
indent_size = 4

# Markdown
[*.md]
trim_trailing_whitespace = false

# Makefile (requires tabs)
[Makefile]
indent_style = tab
